<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zs.sys.user.mapper.SysUserMapper">
    <select id="page" resultType="com.zs.sys.user.domain.entity.SysUserEntity">


        SELECT a.*,b.dept_name,c.post_name
        FROM `sys_user` a
        left join sys_dept b on a.sys_dept_id = b.sys_dept_id
        left join sys_post c on c.sys_post_id = a.sys_post_id
        left join sys_user_role d on d.sys_user_id = a.sys_user_id
        <where>
            a.is_admin = 0
            <if test="params.username != null and params.username != ''">
                AND a.username LIKE CONCAT('%', #{params.username}, '%')
            </if>

            <if test="params.realName != null and params.realName != ''">
                AND a.real_name LIKE CONCAT('%', #{params.realName}, '%')
            </if>

            <if test="params.phone != null and params.phone != ''">
                AND a.phone LIKE CONCAT('%', #{params.phone}, '%')
            </if>

            <if test="params.sex != null and params.sex != ''">
                AND a.sex = #{params.sex}
            </if>

            <if test="params.deptList != null and params.deptList.size > 0">
                and b.sys_dept_id in
                <foreach item="id" collection="params.deptList" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
           <if test="params.sysPostId != null and params.sysPostId != ''">
               AND c.sys_post_id = #{params.sysPostId}
           </if>
            <if test="params.sysRoleId != null and params.sysRoleId != ''">
                AND d.sys_role_id = #{params.sysRoleId}
            </if>

        </where>
    </select>
    <select id="selectByUserName" resultType="com.zs.sys.user.domain.entity.SysUserEntity">
        SELECT *
        FROM `sys_user` a
        WHERE a.username = #{username}
    </select>
    <select id="getList" resultType="com.zs.sys.user.domain.entity.SysUserEntity">
        select a.*,b.dept_name,c.post_name
        from sys_user a
        left join sys_dept b on a.sys_dept_id = b.sys_dept_id
        left join sys_post c on c.sys_post_id = a.sys_post_id
        <where>
            <if test="params.username != null and params.username != ''">
                AND a.username LIKE CONCAT('%', #{params.username}, '%')
            </if>
            <if test="params.realName != null and params.realName != ''">
                AND a.real_name LIKE CONCAT('%', #{params.realName}, '%')
            </if>
            <if test="params.phone != null and params.phone != ''">
                AND a.phone LIKE CONCAT('%', #{params.phone}, '%')
            </if>
            <if test="params.sex != null and params.sex != ''">
                AND a.sex = #{params.sex}
            </if>
            <if test="params.status != null and params.status != ''">
                AND a.status = #{params.status}
            </if>
            <if test="params.deptList.size > 0">
                and b.sys_dept_id in
                <foreach item="id" collection="params.deptList" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
        </where>

    </select>
</mapper>